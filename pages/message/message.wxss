/* 大消息 */
.msg1{
  font-size:20px;
  text-align: center;
  line-height: 30px;
}

/* 小消息 */
.msg2{
  font-size: 13px;
  color: rgb(180, 178, 175);
  text-align: center;
  line-height: 20px;
}

/* 时间 */
.time{
  font-size: 12px;
  color: rgb(180, 178, 175);
  text-align: center;
  line-height: 20px;
}

