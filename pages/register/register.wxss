page{
  height: 100%;    /* 使用page的height可以使页面占全屏 */
  background-color: #fafafa;
 }
.login-container{
  padding: 0 10%;
  height: 100%;
}
.title{
  font-size: large;
  text-align: center;
  padding-top: 5%;
  padding-bottom: 10%;
  font-weight: bold;
  margin-bottom: 50rpx;
}
.login-box>input{
  margin: 5% 0 8% 0;
  border-bottom: 1rpx solid lightgray;
}
.login-btn{
  width: 100%!important;
  background-color: #2f6afd;
  color: white;
  font-weight: normal;
  border-radius: 50rpx;
  /* margin-top: 70rpx; */
}
.three-line{
  margin: 8% 0;
  text-align: center;
  font-size: 12px;
  color: gray;
}
.enroll{
  margin: 8% 0;
  text-align: center;
  font-size: 12px;
  color: gray;
}
image{
  width: 200rpx;
  height: 200rpx;
  margin-top: 150rpx;
  margin-left: 200rpx;
  border-radius: 200px;
  overflow: hidden;
  /* border: 3rpx solid #425552; */
}
.img{
/*  阴影 */
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}
/* 顶部 */
.top{
  width: 100vw;
  height: 80rpx;
  padding: 0 20rpx;
  line-height: 80rpx;
  font-size: 34rpx;
}
.top-text{
  float: left
}
/* 下拉框 */
.top-selected{
  width: 50%;
  display: flex;
  float: right;
  align-items: center;
  justify-content: space-between;
  border: 1px solid lightgray;
  padding: 0 10rpx;
  font-size: 30rpx;
}
/* 下拉内容 */
.select_box {
  background-color: white;
  padding: 0 20rpx;
  width: 53%;
  float: right;
  position: relative;
  right: 0;
  z-index: 1;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.5s;
  font-size: 30rpx;
}
.select_one {
  padding-left: 20rpx;
  width: 100%;
  height: 60rpx;
  position: relative;
  line-height: 60rpx;
  border-bottom: 1px solid rgb(221, 221, 221);
}
/* 下拉图标 */
.top-selected image{
  height:50rpx;
  width:50rpx;
  position: absolute;
  right: 0rpx;
  top: 20rpx;
}